<h3>Posts index</h3>

<ul>
    {{#each model as |post|}}
      <li>
        {{#link-to 'post' post}}
          {{post.title}}
        {{/link-to}}
        <br>
        <button class='btn btn-md btn-danger'{{action 'delete' post}}>Delete</button>
      </li>
    {{/each}}
</ul>
{{#link-to 'post.new'}}<button class="btn btn-lg">New Post</button>{{/link-to}}
